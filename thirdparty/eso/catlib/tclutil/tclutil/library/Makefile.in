# ------------------------------------------------------------------------
# 	Makefile for Tcl library files 
# ------------------------------------------------------------------------

INSTALL      = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
LIBDIR       = @LIBDIR@
TCLUTIL_DIR  = @TCLUTIL_DIR@
ITCL_VERSION = @ITCL_VERSION@
TCL_VERSION = @TCL_VERSION@
RM           = rm -f
SHELL        = /bin/sh
FILES        = *.tcl tclIndex
srcdir	     = @srcdir@

all:

All: 
	cd ..; $(MAKE)

# in the src tree, the tcl sources are in the "library" dir (like tcl/tk)
# in the install tree, they are in, for example, /usr/local/lib/tclutil
install-top:
	test -d $(LIBDIR) || mkdir $(LIBDIR) 
	test -d $(TCLUTIL_DIR) || mkdir $(TCLUTIL_DIR) 

install-files: install-top
	@set -x; for i in $(srcdir)/$(FILES) ; do \
	    $(INSTALL_DATA) $$i $(TCLUTIL_DIR) ; \
	done 

install: index install-files

clean:
	$(RM) *\~ "#"*

index tclIndex: FORCE
	tclsh$(TCL_VERSION) ./mkIndex.tcl

depend:

distclean: clean
	rm -f Makefile	

man:

# generate man pages for itcl classes
doc:
	(cd ../demos; make doc)

# remove generated man pages
cleandoc:
	(cd ../demos; make cleandoc)

FORCE:

include @SRC_ROOT@/makefile.mk

