proc xsltmessagecmd {msg terminate} {
    global xsltMsgs
    global terminatingMsg

    append xsltMsgs "$msg terminate: $terminate "
    if {$terminate} {
        set terminatingMsg 1
    } else {
        set terminatingMsg 0
    }
}

