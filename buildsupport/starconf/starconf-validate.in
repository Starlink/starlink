#! @PERL@ -w
# @configure_input@
#
# This is part of starconv, version @PACKAGE_VERSION@
#
# Usage:
#    starconf-validate [--force] [srcdir]
#
# This checks the build files (Makefile.am and configure.ac) in the
# specified directory (which defaults to .) and confirms that they
# abide by the rules.
#
# If anything breaks the rules, it prints a warning message, and exits
# non-zero.
#
# However if --force is given, then warnings are still printed, but do
# not cause the program to exit with an error status.  This means that
# the starconf bootstrap script can run the very first time, before
# Makefile.in (for example) has been generated for the first time.
# Problems with the format of Makefile.am and configure.ac are still
# reported as fatal errors, even with --force is present.
#

($progname = $0) =~ s+.*/++;
$version = '@PACKAGE_VERSION@';
$force = 0;
$srcdir = undef;

# The `definitely_required' files must exist, or else we exit with a
# non-zero status.  The `required_files' must exist, or we give a
# warning and, if $force is not true, exit non-zero.  The
# `extra_checkins' are like the `required_files' in that they must
# exist; they are distinguished by being generated files rather than
# source ones.
@definitely_required =  qw{ Makefile.am
                            configure.ac
                          };
@required_files =       qw{ bootstrap
                            component.xml.in
                          };
@extra_checkins =       qw{ component.xml
                          };
# Makefile.in and configure are generated files which are no longer
# checked in (removed from the repository 2004 March 14); acinclude.m4
# is effectively generated by starconf.status; aclocal.m4 and
# config.h.in are generated by aclocal/autoreconf; others are
# generated by configure/automake.
@non_checkins =         qw{ Makefile.in
                            configure
                            starconf.status
                            acinclude.m4
                            aclocal.m4
                            config.h.in
                            config.status
                            config.guess
                            config.log
                            config.sub
                            install-sh
                            ltmain.sh
                            missing
                            mkinstalldirs
                            starconf.status.local
                          };
while ($#ARGV >= 0) {
    my $arg = shift(@ARGV);
    $arg eq '--force' && do {
        $force = 1;
        next;
    };

    $arg eq '--help' && do {
        print <<EOD;
Usage: $progname [option] [srcdir]

  Check that the [srcdir] conforms to the conventions of a Starlink
  source directory.  [srcdir] defaults to '.'.  The exit status of the program
  is the number of errors and warnings found.

  Options:
    --force    If present, the exit status represents only the number of
               outright errors.
    --help     Prints this message and exits
    --version  Prints version number and exits

  The following files must exist and be checked in:
EOD
        $line = '   ';
        foreach my $item ((@definitely_required, @required_files, @extra_checkins)) {
            if (length($line . $item) > 75) {
                print $line, "\n";
                $line = "    $item";
            } else {
                $line .= ' '. $item;
            }
        }
        print $line, "\n";

        print "  The following files may exist or not, but must not be checked in:\n";
        $line = '   ';
        foreach my $item (@non_checkins) {
            if (length($line . $item) > 75) {
                print $line, "\n";
                $line = "    $item";
            } else {
                $line .= ' '. $item;
            }
        }
        print $line, "\n";
        exit(0);
    };

    $arg eq '--version' && do {
        print "$progname $version\n";
        exit(0);
    };

    $arg =~ /^-/ && do {
        Usage();
        next;
    };

    if (defined($srcdir)) {
        Usage();
    } else {
        $srcdir = $arg;
    }
}

defined($srcdir) || do { $srcdir = '.'; };



$nwarnings = 0;
$nerrors = 0;

@list_err_missing_required = ();
@list_err_not_checked_in = ();
@list_err_checked_in = ();

foreach $r (@definitely_required) {
    if ( ! -e $r ) {
        #print "$progname: required file $r does not exist\n";
        push(@list_err_missing_required, $r);
        $nerrors++;
    }
}

foreach $r (@required_files) {
    if ( ! -e $r ) {
        # print "$progname: required file $r does not exist\n";
        push(@list_err_missing_required, $r);
        $nwarnings++;
    }
}

# Subversion checkins.
my $gitshow = `git rev-parse --ls-inside-work-tree 2>&1`;
if ( ! ( $? >> 8 ) ) {
    @allgitfiles = ();
    push(@allgitfiles, @definitely_required);
    push(@allgitfiles, @required_files);
    push(@allgitfiles, @extra_checkins);
    foreach $f (@allgitfiles) {
        my $result = `git-ls-files $f 2>&1`;
        #  Return will be "" if not checked in.
        if ( $result eq "" ) {
            print "$progname: file $f is not checked in, but should be\n";
            push(@list_err_not_checked_in, $f);
            $nwarnings++;
        }
    }
    foreach $f (@non_checkins) {
        my $result = `git-ls-files $f 2>&1`;

        #  Return will be "" if not checked in.
        if ( $result ne "" ) {
            #print "$progname: file $f is checked in, but shouldn't be\n\n";
            push(@list_err_checked_in, $f);
            $nwarnings++;
        }
    }
} else {
    print "$progname: not in a git repository\n";
    $nwarnings++;
}


# Now check the contents of configure.ac and Makefile.am.  No need to check
# they exist, since that's checked above.
if (-e "$srcdir/configure.ac") {
    $nerrors += check_configure("$srcdir/configure.ac");
}

if (-e "$srcdir/Makefile.am") {
    $nerrors += check_makefile("$srcdir/Makefile.am");
}

$#list_err_missing_required < 0 ||
  print "$progname: the following files are required but do not exist:\n\t", 
    "@list_err_missing_required\n";
$#list_err_not_checked_in < 0 ||
  print "$progname: the following files should be checked in, but aren't\n\t",
    "@list_err_not_checked_in\n";
$#list_err_checked_in < 0 ||
  print "$progname: the following files should not be checked in, but are\n\t",
    "@list_err_checked_in\n";

exit ($force ? $nerrors : $nerrors+$nwarnings);



sub check_configure {
    my $fn = shift;
    my $nerrors = 0;

    open (CF, "<$fn") || die "Can't open file $fn to read";

    my $has_star_default = 0;
    my $configures_component = 0;
    while (<CF>) {
        /^ *STAR_DEFAULT/ && do {
            if ($has_star_default) {
                # been here already
                print_error ($fn, $.,
                             "more than one STAR_DEFAULT");
                $nerrors++;
            }
            $has_star_default++;
        };

        # Following is not a perfect regexp, but will do in most cases
        /^ *AC_CONFIG_FILES.*component.xml/ && do {
            $configures_component = 1;
        }
    }

    close (CF);

    if (! $has_star_default) {
        print_error ($fn, $., "has no STAR_DEFAULT");
        $nerrors++;
    }
    if (! $configures_component) {
        print_error ($fn, $., "does not appear to configure component.xml");
        $nerrors++;
    }

    return $nerrors;
}

