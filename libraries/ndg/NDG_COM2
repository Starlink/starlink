      INTEGER DHKMP_COM2         ! KeyMap holding NDF to which default 
                                 ! history has been written.
      INTEGER GHKMP_COM2         ! KeyMap holding GRP group contents
      LOGICAL STATE_COM2         ! Current provenance-recording state
      LOGICAL AUTO_COM2          ! Original value of AUTO_HISTORY

