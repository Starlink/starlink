interface SEGMENT

   helplib        'KAPPA_HELP:'

   parameter AXES
      type        '_INTEGER'
      access      'READ'
      vpath       'DYNAMIC'
      ppath       'DYNAMIC'
      prompt      'Indices of the axes spanning the polygon plane'
      helpkey     '*'
   endparameter

   parameter      COSYS          # Co-ordinate system
      type        'LITERAL'
      vpath       'GLOBAL,DEFAULT'
      ppath       'GLOBAL,DYNAMIC'
      prompt      'Co-ordinate system'
      association '<->GLOBAL.COORD_SYSTEM'
      helpkey     '*'
      default     'World'
   endparameter

   parameter      IN1            # First input NDF 
      position    1
      type        'NDF'
      access      'READ'
      vpath       'PROMPT'
      ppath       'GLOBAL'
      association '<-GLOBAL.DATA_ARRAY'
      prompt      'NDF holding data to be put inside the polygon'
      helpkey     '*'
   endparameter

   parameter      IN2            # Second input NDF 
      position    2
      type        'NDF'
      access      'READ'
      vpath       'PROMPT'
      ppath       'DEFAULT'
      prompt      'NDF holding data to be put outside the polygon'
      default     !
      helpkey     '*'
   endparameter

   parameter      LOGFILE        # Name of log file
      type        'FILENAME'
      access      'READ'
      vpath       'DEFAULT'
      ppath       'DEFAULT'
      prompt      'File to store co-ordinates of polygon vertices'
      default     !
      helpkey     '*'
   endparameter

   parameter MAXPOLY
      type        '_INTEGER'
      access      'READ'
      vpath       'DEFAULT'
      ppath       'DEFAULT'
      prompt      'Maximum number of polygons'
      default     !
      helpkey     '*'
   endparameter

   parameter MINPOLY
      type        '_INTEGER'
      access      'READ'
      vpath       'DEFAULT'
      ppath       'DEFAULT'
      prompt      'Minimum number of polygons'
      default     1
      helpkey     '*'
   endparameter

   parameter      MODE           # Interaction mode
      type        'LITERAL'
      vpath       'GLOBAL'
      ppath       'GLOBAL,DYNAMIC,DEFAULT'
      prompt      'Mode to obtain polygon vertices'
      association '<->GLOBAL.INTERACTIONMODE'
      default     'Interface'
      helpkey     '*'
   endparameter

   parameter      OUT            # Output NDF
      position    3
      type        'NDF'
      access      'WRITE'
      vpath       'PROMPT'
      association '->GLOBAL.DATA_ARRAY'
      prompt      'Output NDF'
      helpkey     '*'
   endparameter

   parameter      POLY1
      type        'FILENAME'
      vpath       'PROMPT'
      ppath       'CURRENT'
      prompt      'File holding coordinates defining polygon 1'
      helpkey     '*'
   endparameter
              
   parameter      POLY2
      type        'FILENAME'
      vpath       'PROMPT'
      ppath       'CURRENT'
      prompt      'File holding coordinates defining polygon 2'
      helpkey     '*'
   endparameter
              
