      type        '_LOGICAL'
      access      'READ'
      vpath       'DEFAULT'
      ppath       'DEFAULT'
      default     'YES'
      prompt      'Should quality values be copied to the output NDF?'
      helpkey     '*'
   endparameter

   parameter VARIANCE
      type        '_LOGICAL'
      access      'READ'
      vpath       'DEFAULT'
