         parameter out {
            position 2
            type NDF
            access WRITE
            ppath CURRENT
            association ->GLOBAL.DATA_ARRAY
            prompt {Output Stokes cube}
            helpkey *
          }

         parameter pmode {
            type LITERAL
            access READ
            vpath DEFAULT
            ppath DEFAULT
            default LINEAR
            ppath DEFAULT
            prompt {Polarimetric mode (LINEAR or CIRCULAR)}
            helpkey *
          }

         parameter setvar {
            type _LOGICAL
            access READ
            vpath {DEFAULT }
            ppath DEFAULT
            default FALSE
            prompt {Store estimated variances in input images?}
            helpkey *
