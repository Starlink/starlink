#        Port to NDF and Unix.
#     03-MAR-1999 (TDCA):
#        Changed helplib to FIG_HELP.
#     05-JUL-2001 (VGG):
#        Introduced ERRTEMP parameter to include errors on the input
#        temperature. 
#     07-JUL-2001 (ACD):
#        Added vpath for ERRTEMP.
#     {enter_further_changes_here}
#-

interface BBODY

   helplib 'FIG_HELP:'

   parameter LOGAR
      type     '_LOGICAL'
      default  NO
      vpath    'DEFAULT'
      prompt   'Write logarithms of intensity'
      helpkey  '*'
   endparameter

   parameter TEMP
      position 1
      type     '_REAL'
      range    1E-35, 1E+35
      prompt   'Black body temperature in K'
      helpkey  '*'
   endparameter

   parameter ERRTEMP
      type     '_REAL'
      range    1E-35, 1E+35
      default  !      
      vpath    'DYNAMIC,DEFAULT'
      prompt   'Error on the Black body temperature in K'
      helpkey  '*'
   endparameter

   parameter IN
      type     'NDF'
      default  !
      prompt   'Input NDF'
      helpkey  '*'
   endparameter

   parameter XSTART
      type     '_REAL'
      prompt   'Spectroscopic axis start value'
      helpkey  '*'
   endparameter

   parameter XSTEP
      type     '_REAL'
      prompt   'Spectroscopic axis increment'
      helpkey  '*'
   endparameter

   parameter XEND
      type     '_REAL'
      prompt   'Spectroscopic axis end value'
      helpkey  '*'
   endparameter

   parameter XLABEL
      type     '_CHAR'
      default  'wavelength'
      in       'wavelength', 'frequency'
      prompt   'Label for spectroscopic axis'
      helpkey  '*'
   endparameter

   parameter XUNIT
      type     '_CHAR'
      prompt   'Unit for spectroscopic axis'
      helpkey  '*'
   endparameter

   parameter OUT
      type     'NDF'
      ppath    'GLOBAL'
      association '->GLOBAL.DATA_ARRAY'
      prompt   'Output NDF'
      helpkey  '*'
   endparameter

endinterface
