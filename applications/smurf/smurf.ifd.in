                prompt {Input Simulated NDF File}
                ppath GLOBAL CURRENT
                helpkey *
            }

            parameter method {
                type _CHAR
                prompt {Bad bolometer generation method}
                default RANDOM
                helpkey *
            }

            parameter seed {
                position 5
                type _INTEGER
