CC           	= @CC@
CXX           	= @CXX@
CFLAGS  	= @CXXDEBUGFLAGS@
TOPDIR      	= @DESTDIR@
LIBDIR      	= @LIBDIR@
DEPEND_TARGET	= @DEPEND_TARGET@

# Tclutil library
TCLUTIL_LIB     = @TCLUTIL_LIB@
TCLUTIL_LIB_STATIC  = @TCLUTIL_LIB_STATIC@

# Astrotcl library
ASTROTCL_LIB     = @ASTROTCL_LIB@
ASTROTCL_LIB_STATIC  = @ASTROTCL_LIB_STATIC@

# ------------------------------------------------------------------------

SRCS 		=  tRtd.C

OBJS 		=  tRtd.o

PROGS 		=  tRtd

# Take include files from the build dirs, if present
BUILD_INCLUDES  = @TCLUTIL_BUILD_INCLUDES@

INCLUDES	= -I../../rtdevt/include \
		  $(BUILD_INCLUDES) \
		  -I$(TOPDIR)/include/tclutil

CC_SWITCHES	= $(CFLAGS) $(DEFINES) $(INCLUDES)

LIBRARIES       = ../../rtdevt/lib/librtdImgEvt.a \
		  $(TCLUTIL_LIB_STATIC)

DEPEND_FLAGS    = $(CC_SWITCHES) @CXX_INCLUDE@ @CXX_DEPEND_FLAGS@
SHELL    	= /bin/sh
AR       	= ar rc
RM       	= rm -f

all: 

test: $(PROGS)

All:
	cd ../..; $(MAKE); $(MAKE)

install:

clean: 
	$(RM) $(PROGS) $(OBJS) *\~ "#"* *.o

distclean: clean 
	rm -f Makefile depclean

tRtd: $(LIBRARIES) tRtd.o 
	$(CXX) $(CC_SWITCHES) -o $@ $@.o $(LIBRARIES) @LIBS@ 
	@echo "*** run $@ manually ***"	

.SUFFIXES: .C
.c.o:
	$(CC) -c $(CC_SWITCHES) $<

.C.o:
	$(CXX) -c $(CC_SWITCHES) $<

man:

include ../../depend.mk
