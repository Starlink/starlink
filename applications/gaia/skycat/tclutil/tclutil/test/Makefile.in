CC           	= @CC@
CXX           	= @CXX@
CFLAGS  	= @CXXDEBUGFLAGS@
TOPDIR      	= @DESTDIR@
LIBDIR      	= @LIBDIR@
DEPEND_TARGET	= @DEPEND_TARGET@

SRCS 		=  

OBJS 		=  

PROGS 		=  

INCLUDES	= 

CC_SWITCHES	= $(DEFINES) $(INCLUDES) $(CFLAGS)

LIBRARIES       = 

DEPEND_FLAGS    = $(CC_SWITCHES) @CXX_INCLUDE@ @CXX_DEPEND_FLAGS@
SHELL    	= /bin/sh
AR       	= ar rc
RM       	= rm -f

TCL_APPS        = \
		Test tDoubleList tLabelEntry tListboxWidget tButtonFrame \
		tDoubleTableList tLabelEntryScale tProgressBar \
		tCanvasDraw tEntryForm tLabelMenu tTableList \
		tCanvasWidget tFileSelect tLabelMessage tTableList2 \
		tCheckEntry tFrameWidget tLabelNumber tTextDialog \
		tChoiceDialog tInputDialog tLabelValue tTopLevelWidget \
		tChooser tLabelCheck tLabelWidget \
		tDialogWidget tLabelChoice tListDialog

all: tcl_apps

test: $(PROGS)

All:
	cd ../..; $(MAKE); $(MAKE)

# create the startup script for starting the Tcl applications
tcl_apps:
	@for i in $(TCL_APPS); do \
	    rm -f $$i; \
	    echo '#!/bin/sh' > $$i; \
	    cat ../demos/tclutil.sh | awk '! /^ *#/ { if (length()) { print "#\\"; print }}' >> $$i; \
	    echo '# --------------------------------------------------' >> $$i; \
	    cat $$i.tcl | awk '! /^ *#/' >> $$i; \
	    chmod +x $$i ; \
	done


install:

clean: 
	$(RM) $(PROGS) $(OBJS) $(TCL_APPS) *\~ "#"* *.o

distclean: clean 
	rm -f Makefile depclean

.SUFFIXES: .C
.c.o:
	$(CC) -c $(CC_SWITCHES) $<

.C.o:
	$(CXX) -c $(CC_SWITCHES) $<

man:

include @SRC_ROOT@/makefile.mk
include ../../depend.mk
