      <name>Norman Gray</name>
      <uname>nxg</uname>
      <email>norman@astro.gla.ac.uk</email>
      <role>owner</role>
    </person>
    <person>
      <name>Mark Taylor</name>
      <uname>mbt</uname>
      <email>m.b.taylor@bristol.ac.uk</email>
    </person>
    <person>
      <name>Grant Privett</name>
    </person>
  </developers>
  <documentation>@STAR_DOCUMENTATION@</documentation>
  <bugreports>@PACKAGE_BUGREPORT@</bugreports>
